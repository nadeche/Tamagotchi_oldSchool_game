<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nadeche.tamagotchi_oldschool_game.MainActivity"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Will the number on the right be higher or lower?"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:textColor="#45ffda"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/first_number"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="106dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#03c100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/second_number"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#03c100"
        android:layout_alignBottom="@+id/first_number"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Higher"
        android:id="@+id/button_higher"
        android:textSize="25dp"
        android:background="#73a7ff"
        android:padding="6dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lower"
        android:id="@+id/button_lower"
        android:layout_marginTop="54dp"
        android:textSize="25dp"
        android:background="#008b33"
        android:layout_below="@+id/button_higher"
        android:layout_centerHorizontal="true"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/win_or_not"
        android:layout_below="@+id/textView2"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="#fc0303" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try again"
        android:id="@+id/try_again"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:textSize="20dp"
        android:paddingLeft="8dp"
        android:paddingTop="6dp"
        android:paddingRight="8dp"
        android:paddingBottom="6dp" />
</RelativeLayout>
